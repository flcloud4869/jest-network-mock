{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "schedule:weekends",
    ":dependencyDashboardApproval",
    ":assignAndReview(NoDocCat)",
    ":labels(dependencies)"
  ],
  "rebaseWhen": "never",
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "npm dependencies",
      "matchManagers": [
        "npm"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    },
    {
      "groupName": "github-actions dependencies",
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
